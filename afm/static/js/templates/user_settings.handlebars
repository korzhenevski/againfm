<h1>{{t "settings.title"}}</h1>
<div class="user-settings">
<fieldset>
    <legend>{{t "settings.playback" }}</legend>
</fieldset>
<ul class="checkbox-shift">
    <li>{{setting "throttle_traffic"}}</li>
    <li>{{setting "limit_night_volume"}}</li>
    <li>{{setting "fading_sound"}}</li>
    <li>{{setting "spectrum"}}</li>
</ul>

<fieldset>
    <legend>{{t "settings.personal_info.title"}}</legend>
</fieldset>
<ul>
    <li>
        {{t "settings.personal_info.name"}}:
        <form action="change_name" autocomplete="off" class="change-name">
            <input name="name" placeholder="{{t "settings.personal_info.name"}}" value="{{ user.name }}" />
            <input type="submit" class="btn" disabled="disabled" value="{{t "button.change"}}" />
        </form>
    </li>
</ul>
</div>
<div class="close"></div>
