<img src="{{image_url}}" width="78" height="78" />
<div class="radio-sticker-content">
    <h1 title="{{title}}">
        <span class="title-inner">{{title}}</span>
    </h1>
    <h2 title="{{subtitle}}">{{subtitle}}</h2>
    {{#if has_station_favorite}}
        <div class="station bookmark-station{{#if station.favorite}} favorite-station{{/if}}">
            <i class="icon"></i>
            {{station.title}}
        </div>
    {{else}}
        <div class="station">{{station.title}}</div>
    {{/if}}
</div>

{{#if has_track_favorite}}
    <div class="bookmark-track{{#if favorite_track}} favorite-track{{/if}}"></div>
{{/if}}

{{#if glare}}
    <img class="glare" src="/static/i/display/glare.png" width="78" height="78" />
{{/if}}
