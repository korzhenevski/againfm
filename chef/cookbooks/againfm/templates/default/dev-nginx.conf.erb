server {
	server_name again.fm againfm.local .localtunnel.com;

    #error_page 404 /404.html;
    #error_page 403 /403.html;
    #error_page 500 502 503 504 /500.html;

    #location ~ ^/(404|403|500)\.html {
    #    root /var/www/againfm/afm/web/templates;
    #}

	location / {
		proxy_pass http://127.0.0.1:5000;
		proxy_set_header Host $host;
	}

	location /favicon.ico {
	    root /var/www/againfm/afm/static/i;
	}

	# поисковые запросы идут на отдельного демона
	location /api/playlist/search {
		rewrite /api/playlist/search/([^/]+) /search/$1 break;
		proxy_pass http://10.0.0.3:6100;
	}

	location /static {
		expires 7d;
		add_header Cache-Control public;
		alias /var/www/againfm/afm/static;
	}

	location /admin/static {
		expires 7d;
		add_header Cache-Control public;
		alias /var/www/againfm/afm/admin/static;
	}
}
